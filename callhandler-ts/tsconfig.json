{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "!node_modules/@types"]
}